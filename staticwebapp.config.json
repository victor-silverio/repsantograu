{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/*.{png,jpg,gif,webp,css,js,ico,xml,txt}"]
  },
  "routes": [
    {
      "route": "/index.html",
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "route": "/*.{png,jpg,gif,webp,css,js,ico,xml,txt}",
      "headers": {
        "Cache-Control": "public, max-age=31536000, must-revalidate"
      }
    }
  ],
  "globalHeaders": {
    "content-security-policy": "default-src https: 'unsafe-inline' 'unsafe-eval'; img-src https: data: blob:;"
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html"
    }
  }
}